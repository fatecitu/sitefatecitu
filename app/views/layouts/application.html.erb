			     <div id="aviso"> <%= flash[:aviso] %> </div>
			   <% end %>
               <%= yield %>
                	
		</div> <!-- conteudo END -->

		<div id="border">
			<h4>Acesso Rápido</h4>
			<ul id="subnavigation">
				<li><%= link_to "Área do Professor", :controller=> "backend", :action=>"index" %> </li>
